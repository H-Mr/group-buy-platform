<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.hjw.dev.platform.infrastructure.dao.ISkuDao">

    <resultMap id="BaseResultMap" type="cn.hjw.dev.platform.infrastructure.dao.po.Sku">
        <id column="id" property="id"/>
        <result column="source" property="source"/>
        <result column="channel" property="channel"/>
        <result column="goods_id" property="goodsId"/>
        <result column="goods_name" property="goodsName"/>
        <result column="original_price" property="originalPrice"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, source, channel, goods_id, goods_name, original_price, create_time, update_time
    </sql>

    <select id="querySkuByGoodsId" parameterType="java.lang.String" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/>
        from sku
        where goods_id = #{goodsId}
    </select>

    <select id="querySkuList" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/>
        from sku
        order by id desc
    </select>

    <insert id="insert" parameterType="cn.hjw.dev.platform.infrastructure.dao.po.Sku">
        insert into sku
        (source, channel, goods_id, goods_name, original_price, create_time, update_time)
        values
            (#{source}, #{channel}, #{goodsId}, #{goodsName}, #{originalPrice}, now(), now())
    </insert>

    <update id="update" parameterType="cn.hjw.dev.platform.infrastructure.dao.po.Sku">
        update sku
        <set>
            <if test="goodsName != null">goods_name = #{goodsName},</if>
            <if test="originalPrice != null">original_price = #{originalPrice},</if>
            update_time = now()
        </set>
        where goods_id = #{goodsId}
    </update>

</mapper>